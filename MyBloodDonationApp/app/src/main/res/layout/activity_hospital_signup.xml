<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hospital_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.deepak.myblooddonationapp.HospitalSignupActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/H_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_business_black_24dp"
                android:drawablePadding="20dp"
                android:text="Hospital Signup"
                android:textAllCaps="true"
                android:textSize="25dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_Hname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/H_Title">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/H_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_business_black_24dp"
                    android:drawablePadding="20dp"
                    android:hint="Hospital Name" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_H_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_Hname">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/H_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="20dp"
                    android:hint="Password"
                    android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>




            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_H_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_H_Password">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/H_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/addressicon"
                    android:drawablePadding="20dp"
                    android:hint="Address" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_H_Contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_H_address">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/H_Contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/phoneicon"
                    android:drawablePadding="20dp"
                    android:hint="Contact No"
                    android:inputType="phone"
                    android:maxLength="10"
                    />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_H_City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_H_Contact">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/H_City"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/cityicon"
                    android:drawablePadding="20dp"
                    android:hint="City" />


            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/Cap_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_H_City"
                android:drawableLeft="@drawable/blood_icon"
                android:drawablePadding="20dp"
                android:text="Blood Capacity"

                android:textSize="30dp"

                />


            <!-- First Row -->

            <TextView
                android:id="@+id/B_Plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Cap_Title"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="B+ve" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_B_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Cap_Title"
                android:layout_toRightOf="@id/B_Plus">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/B_plus_unit"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="20dp"
                    android:hint="units"
                    android:inputType="number" />


            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/B_Minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Cap_Title"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/input_B_plus"
                android:text="B-ve" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Cap_Title"
                android:layout_toRightOf="@id/B_Minus">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/B_minus_unit"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="20dp"
                    android:hint="units"
                    android:inputType="number"/>


            </android.support.design.widget.TextInputLayout>

            <!--First Row End -->


            <!-- Second Row -->

            <TextView
                android:id="@+id/A_Plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_B_plus"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="A+ve" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_A_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_B_plus"
                android:layout_toRightOf="@id/A_Plus">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/A_plus_unit"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="20dp"
                    android:hint="units"
                    android:inputType="numberSigned" />


            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/A_Minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_B_plus"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/input_A_plus"
                android:text="A-ve" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_B_plus"
                android:layout_toRightOf="@id/A_Minus">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/A_minus_unit"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="20dp"
                    android:hint="units"
                    android:inputType="number"/>


            </android.support.design.widget.TextInputLayout>

            <!--Second Row End -->


            <!-- Third Row -->

            <TextView

                android:id="@+id/AB_Plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_A_plus"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="AB+ve"
                />


            <android.support.design.widget.TextInputLayout

                android:id="@+id/input_AB_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_A_plus"
                android:layout_toRightOf="@id/A_Plus">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/AB_plus_unit"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="20dp"
                    android:hint="units"
                    android:inputType="numberSigned" />


            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/AB_Minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_A_plus"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/input_AB_plus"
                android:text="AB-ve" />

            <android.support.design.widget.TextInputLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_A_plus"
                android:layout_toRightOf="@id/A_Minus">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/AB_minus_unit"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="20dp"
                    android:hint="units"
                    android:inputType="number"/>


            </android.support.design.widget.TextInputLayout>

            <!--Third Row End -->


            <!-- Fourth Row -->

            <TextView
                android:id="@+id/O_Plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_AB_plus"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="O+ve" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_O_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_AB_plus"
                android:layout_toRightOf="@id/O_Plus">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/O_plus_unit"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="20dp"
                    android:hint="units"
                    android:inputType="numberSigned" />


            </android.support.design.widget.TextInputLayout>


            <TextView

                android:id="@+id/O_Minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_AB_plus"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/input_O_plus"
                android:text="O-ve" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_AB_plus"
                android:layout_toRightOf="@id/O_Minus">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/O_minus_unit"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="20dp"
                    android:hint="units"
                    android:inputType="number"/>


            </android.support.design.widget.TextInputLayout>

            <!--Fourth Row End -->

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/input_O_plus"
                android:onClick="SignupHospital"
                android:text="Done" />


        </RelativeLayout>


    </ScrollView>
</RelativeLayout>
