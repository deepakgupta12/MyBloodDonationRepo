<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hospital_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.deepak.myblooddonationapp.HospitalProfileActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/H_pro_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/H_Pro_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/H_pro_image"
            android:layout_marginLeft="16dp"
            android:text="Name"
            android:textAppearance="?android:textAppearanceLarge"

            />


        <TextView
            android:id="@+id/H_pro_input_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/H_Pro_Name"
            android:layout_marginRight="16dp"
            android:text="Address" />


        <TextView
            android:id="@+id/H_Pro_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_below="@+id/H_Pro_Name"
            android:layout_marginLeft="16dp"
            android:text="Address"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/H_pro_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/H_Pro_Address"
            android:layout_marginLeft="16dp"
            android:text="Email"
            android:textAppearance="?android:textAppearanceLarge" />


        <TextView
            android:id="@+id/H_pro_input_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_below="@id/H_Pro_Address"
            android:layout_marginRight="16dp"
            android:text="Email" />

        <TextView
            android:id="@+id/H_pro_Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/H_pro_Email"

            android:layout_marginLeft="16dp"
            android:text="Contact"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/H_pro_input_Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/H_pro_Email"

            android:layout_marginRight="16dp"
            android:text="contact" />

        <TextView
            android:id="@+id/H_pro_City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/H_pro_Contact"

            android:layout_marginLeft="16dp"
            android:text="city"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/H_pro_input_City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/H_pro_Contact"
            android:layout_marginRight="16dp"
            android:text="city" />


        <android.support.v7.widget.CardView
            android:id="@+id/CapacityCard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/H_pro_City">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/blood_icon"
                android:text="Capacity"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#d50000" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/B_plus_card"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/CapacityCard"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="B+ve"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/B_plus_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"

                    android:text="28 units" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/B_minus_Card"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/CapacityCard"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/B_plus_card">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="B-ve"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/B_minus_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"

                    android:text="28 units" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/A_plus_card"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/B_plus_card"

            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="A+ve"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/A_plus_input_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"

                    android:text="28 units" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/A_minus_card"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/B_minus_Card"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/B_plus_card">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="A-ve"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/A_minus_input_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="28 units" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/AB_plus_card"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/A_plus_card"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="AB+ve"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/AB_plus_input_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="28 units" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/AB_minus_card"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/A_minus_card"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/A_plus_card">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="AB-ve"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/AB_minus_input_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"

                    android:text="28 units" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/O_plus_card"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/AB_plus_card"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="O+ve"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/O_plus_input_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="28 units" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/O_minus_card"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/AB_plus_card"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/O_plus_card">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="O-ve"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/O_minus_input_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="28 units" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/H_pro_input_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/H_pro_input_Address"
            android:layout_alignRight="@+id/H_pro_input_Address"
            android:layout_below="@+id/H_pro_image"
            android:text="Hname" />

        <ProgressBar
            android:id="@+id/H_pro_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="50dp" />


    </RelativeLayout>

</ScrollView>
