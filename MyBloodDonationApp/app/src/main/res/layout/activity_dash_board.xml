<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deepak.myblooddonationapp.DashBoardActivity">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ProfileIcon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:onClick="UploadImage"
                android:src="@drawable/ic_person_add_black_24dp"
                app:civ_border_color="#fc0a0a"
                app:civ_border_width="2dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@id/ProfileIcon"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:drawableRight="@drawable/camera_24dp"
                android:onClick="UploadImage" />

            <ProgressBar
                android:id="@+id/progress_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp" />


            <Button
                android:id="@+id/SearchBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ProfileIcon"
                android:background="@drawable/ic_find_in_page_black_24dp"
                android:clickable="false"
                android:onClick="searchBtnClick" />


            <Spinner
                android:id="@+id/SearchEdit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/ProfileIcon"
                android:layout_toLeftOf="@+id/SearchBtn"
                android:layout_toStartOf="@+id/SearchBtn"
                android:entries="@array/Blood_Group"
                android:prompt="@+string/bloodname" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/SearchBtn"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/button13"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ProfileMenudimen"
                        android:drawableLeft="@drawable/ic_find_in_page_black_24dp"
                        android:onClick="search_By_Hospital"
                        android:drawableRight="@drawable/ic_find_in_page_black_24dp"
                        android:text="Search by HOspital"
                        android:textSize="@dimen/profile_menu_items" />


                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ProfileMenudimen"
                        android:drawableRight="@drawable/ic_person_pin_red_24dp"
                        android:drawableLeft="@drawable/ic_person_pin_red_24dp"

                        android:onClick="proClick"
                        android:text="My Profile"
                        android:textSize="@dimen/profile_menu_items"

                        />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ProfileMenudimen"
                        android:drawableLeft="@drawable/edit_image"
                        android:drawableRight="@drawable/edit_image"

                        android:onClick="updateprofile"
                        android:text="Update"
                        android:textSize="@dimen/profile_menu_items" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ProfileMenudimen"
                        android:drawableRight="@drawable/ic_help_red_24dp"
                        android:drawableLeft="@drawable/ic_help_red_24dp"

                        android:onClick="helpopen"
                        android:text="Help"
                        android:textSize="@dimen/profile_menu_items" />


                    <Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ProfileMenudimen"
                        android:drawableLeft="@drawable/ic_log_out_red_24dp"
                        android:drawableRight="@drawable/ic_log_out_red_24dp"
                        android:onClick="logout"
                        android:text="LOG OUT"
                        android:textSize="@dimen/profile_menu_items" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>




</ScrollView>
