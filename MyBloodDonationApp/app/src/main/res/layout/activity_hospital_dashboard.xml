<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_hospital_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"


    tools:context="com.example.deepak.myblooddonationapp.HospitalDashboardActivity">


    <ProgressBar
        android:id="@+id/Hospital_Image_Upload_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <ImageView
        android:id="@+id/Hospital_Image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_business_black_24dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="uploadHospitalimage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Hospital_profile_click"
        android:text="My Profile "
        android:id="@+id/Hospital_Profile"
        android:layout_below="@id/Hospital_Image"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableRight="@drawable/edit_image"
        android:id="@+id/button12"
        android:layout_alignBottom="@+id/Hospital_Image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="uploadHospitalimage"/>

    <Button
        android:id="@+id/Hospital_Search_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Hospitals "
        android:layout_alignBaseline="@+id/Hospital_Profile"
        android:layout_alignBottom="@+id/Hospital_Profile"
        android:layout_toRightOf="@+id/Hospital_Profile"
        android:layout_toEndOf="@+id/Hospital_Profile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:layout_below="@+id/Hospital_Profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button11" />


</RelativeLayout>
